{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:node/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "no-trailing-spaces": "error",
        "no-unused-vars": "warn",
        "no-console": "error",
        "semi": [
            "error",
            "always"
        ],
        "node/no-unpublished-require": [
            "error", {
                "allowModules": ["chai"]
            }
        ]
    }
}
